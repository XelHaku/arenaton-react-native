{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@openai/*": [
        "./utils/openai*"
      ],
      "@cursos/*": [
        "./cursos/*"
      ],
      "@store/*": [
        "./store/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
